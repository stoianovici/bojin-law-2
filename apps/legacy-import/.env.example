# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/legal_platform_dev"

# Cloudflare R2 Storage
R2_ACCOUNT_ID="your_account_id"
R2_ACCESS_KEY_ID="your_access_key_id"
R2_SECRET_ACCESS_KEY="your_secret_access_key"
R2_BUCKET_NAME="legacy-import"
R2_ENDPOINT="https://<account_id>.r2.cloudflarestorage.com"

# Redis (for Bull queue)
REDIS_HOST="localhost"
REDIS_PORT="6379"
REDIS_PASSWORD=""

# Anthropic AI (for document analysis)
ANTHROPIC_API_KEY="sk-ant-..."

# Azure AD (for authentication - MSAL browser)
# These are public and can be exposed to browser
NEXT_PUBLIC_AZURE_AD_CLIENT_ID="your_client_id"
NEXT_PUBLIC_AZURE_AD_TENANT_ID="your_tenant_id"
NEXT_PUBLIC_REDIRECT_URI="http://localhost:3001/auth/callback"

# Azure AD (server-side - optional, for advanced scenarios)
AZURE_AD_CLIENT_SECRET="your_client_secret"

# Microsoft Graph (for OneDrive)
GRAPH_CLIENT_ID="your_graph_client_id"
GRAPH_CLIENT_SECRET="your_graph_client_secret"

# App Settings
NODE_ENV="development"
NEXT_PUBLIC_APP_URL="http://localhost:3001"
