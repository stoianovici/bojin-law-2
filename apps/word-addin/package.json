{
  "name": "@legal-platform/word-addin",
  "version": "1.0.0",
  "private": true,
  "description": "Legal AI Assistant Word Add-in",
  "scripts": {
    "dev": "vite",
    "build": "tsc --noEmit && vite build",
    "build:prod": "VITE_API_BASE_URL=https://api.bojin-law.com VITE_AZURE_AD_CLIENT_ID=0ac0c3a6-6482-4ff4-81a6-c2f96c506cfd VITE_AZURE_AD_TENANT_ID=e39d7b1e-9d0c-41ae-b1db-99aecc04fa42 vite build",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "generate-icons": "node scripts/create-png-icons.js",
    "sideload:mac": "mkdir -p ~/Library/Containers/com.microsoft.Word/Data/Documents/wef && cp manifest.dev.xml ~/Library/Containers/com.microsoft.Word/Data/Documents/wef/",
    "sideload:mac:remove": "rm -f ~/Library/Containers/com.microsoft.Word/Data/Documents/wef/manifest.dev.xml",
    "start": "pnpm generate-icons && pnpm dev"
  },
  "dependencies": {
    "@azure/msal-browser": "^4.27.0",
    "@fluentui/react": "^8.120.0",
    "@microsoft/office-js": "^1.1.89",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/office-js": "^1.0.377",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-basic-ssl": "^2.1.3",
    "@vitejs/plugin-react": "^4.2.0",
    "typescript": "^5.3.0",
    "vite": "^6.0.0"
  }
}
