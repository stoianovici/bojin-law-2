<?xml version="1.0" encoding="UTF-8"?>
<!--
  Word Add-in Manifest
  Story 3.4: Word Integration with Live AI Assistance

  Office Add-in manifest for the Legal Platform Word integration.
  Provides AI-powered assistance directly within Microsoft Word.

  Taskpane opens directly from Insert > My Add-ins menu (no ribbon).
-->
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:type="TaskPaneApp">

  <!-- Unique ID for this add-in (generate new UUID for production) -->
  <Id>8e3e0c5f-1234-4d2f-9a5b-3c7d8e9f0a1b</Id>

  <!-- Version following semver -->
  <Version>1.0.0.0</Version>

  <!-- Provider information -->
  <ProviderName>Bojin Law Legal Platform</ProviderName>

  <!-- Display name shown to users -->
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="Legal AI Assistant"/>
  <Description DefaultValue="AI-powered legal document assistance with clause suggestions, language explanations, and text improvements."/>

  <!-- Icon URLs - replace with actual hosted icons -->
  <IconUrl DefaultValue="https://localhost:3005/assets/addin-icon-64.png"/>
  <HighResolutionIconUrl DefaultValue="https://localhost:3005/assets/addin-icon-128.png"/>

  <!-- Support URL -->
  <SupportUrl DefaultValue="https://support.legalplatform.com"/>

  <!-- Application domains for security -->
  <AppDomains>
    <AppDomain>https://localhost:3005</AppDomain>
    <AppDomain>https://localhost:4000</AppDomain>
    <AppDomain>https://login.microsoftonline.com</AppDomain>
    <AppDomain>https://graph.microsoft.com</AppDomain>
  </AppDomains>

  <!-- Host applications this add-in works with -->
  <Hosts>
    <Host Name="Document"/>
  </Hosts>

  <!-- Required permissions -->
  <Requirements>
    <Sets DefaultMinVersion="1.1">
      <Set Name="WordApi" MinVersion="1.3"/>
    </Sets>
  </Requirements>

  <!-- Default settings - taskpane opens directly from menu -->
  <DefaultSettings>
    <SourceLocation DefaultValue="https://localhost:3005/taskpane.html"/>
  </DefaultSettings>

  <!-- Read-write permission to document -->
  <Permissions>ReadWriteDocument</Permissions>

</OfficeApp>
