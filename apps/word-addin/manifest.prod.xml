<?xml version="1.0" encoding="UTF-8"?>
<!--
  Word Add-in Production Manifest
  Bojin AI - AI-powered legal document assistance

  Deploy via Microsoft 365 Admin Center:
  1. Go to admin.microsoft.com > Settings > Integrated apps
  2. Upload this manifest file
  3. Assign to users/groups
-->
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
           xmlns:ov="http://schemas.microsoft.com/office/taskpaneappversionoverrides"
           xsi:type="TaskPaneApp">

  <Id>8e3e0c5f-5678-4d2f-9a5b-3c7d8e9f0a1b</Id>
  <Version>2.0.0.0</Version>
  <ProviderName>Bojin Law</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="Bojin AI"/>
  <Description DefaultValue="AI-powered legal document assistance"/>

  <IconUrl DefaultValue="https://legal-platform-gateway.onrender.com/word-addin/assets/icon-64.png"/>
  <HighResolutionIconUrl DefaultValue="https://legal-platform-gateway.onrender.com/word-addin/assets/icon-128.png"/>
  <SupportUrl DefaultValue="https://legal-platform-web.onrender.com"/>

  <AppDomains>
    <AppDomain>https://legal-platform-gateway.onrender.com</AppDomain>
    <AppDomain>https://legal-platform-web.onrender.com</AppDomain>
    <AppDomain>https://login.microsoftonline.com</AppDomain>
    <AppDomain>https://graph.microsoft.com</AppDomain>
  </AppDomains>

  <Hosts>
    <Host Name="Document"/>
  </Hosts>

  <Requirements>
    <Sets DefaultMinVersion="1.1">
      <Set Name="WordApi" MinVersion="1.3"/>
    </Sets>
  </Requirements>

  <DefaultSettings>
    <SourceLocation DefaultValue="https://legal-platform-gateway.onrender.com/word-addin/taskpane.html"/>
  </DefaultSettings>

  <Permissions>ReadWriteDocument</Permissions>

  <VersionOverrides xmlns="http://schemas.microsoft.com/office/taskpaneappversionoverrides" xsi:type="VersionOverridesV1_0">
    <Hosts>
      <Host xsi:type="Document">
        <DesktopFormFactor>
          <FunctionFile resid="Commands.Url"/>
          <ExtensionPoint xsi:type="PrimaryCommandSurface">
            <CustomTab id="LegalAI.Tab">
              <Group id="LegalAI.Group">
                <Label resid="GroupLabel"/>
                <Icon>
                  <bt:Image size="16" resid="Icon.16"/>
                  <bt:Image size="32" resid="Icon.32"/>
                  <bt:Image size="80" resid="Icon.80"/>
                </Icon>

                <Control xsi:type="Button" id="LegalAI.OpenButton">
                  <Label resid="OpenButton.Label"/>
                  <Supertip>
                    <Title resid="OpenButton.Label"/>
                    <Description resid="OpenButton.Tooltip"/>
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Icon.16"/>
                    <bt:Image size="32" resid="Icon.32"/>
                    <bt:Image size="80" resid="Icon.80"/>
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <TaskpaneId>MainPane</TaskpaneId>
                    <SourceLocation resid="Taskpane.Url"/>
                  </Action>
                </Control>
              </Group>
              <Label resid="TabLabel"/>
            </CustomTab>
          </ExtensionPoint>
        </DesktopFormFactor>

          <!-- Word Online Support -->
          <OnlineFormFactor>
            <FunctionFile resid="Commands.Url"/>
            <ExtensionPoint xsi:type="PrimaryCommandSurface">
              <CustomTab id="LegalAI.Tab.Online">
                <Group id="LegalAI.Group.Online">
                  <Label resid="GroupLabel"/>
                  <Icon>
                    <bt:Image size="16" resid="Icon.16"/>
                    <bt:Image size="32" resid="Icon.32"/>
                    <bt:Image size="80" resid="Icon.80"/>
                  </Icon>

                  <Control xsi:type="Button" id="LegalAI.OpenButton.Online">
                    <Label resid="OpenButton.Label"/>
                    <Supertip>
                      <Title resid="OpenButton.Label"/>
                      <Description resid="OpenButton.Tooltip"/>
                    </Supertip>
                    <Icon>
                      <bt:Image size="16" resid="Icon.16"/>
                      <bt:Image size="32" resid="Icon.32"/>
                      <bt:Image size="80" resid="Icon.80"/>
                    </Icon>
                    <Action xsi:type="ShowTaskpane">
                      <TaskpaneId>MainPane</TaskpaneId>
                      <SourceLocation resid="Taskpane.Url"/>
                    </Action>
                  </Control>
                </Group>
                <Label resid="TabLabel"/>
              </CustomTab>
            </ExtensionPoint>
          </OnlineFormFactor>
      </Host>
    </Hosts>

    <Resources>
      <bt:Images>
        <bt:Image id="Icon.16" DefaultValue="https://legal-platform-gateway.onrender.com/word-addin/assets/icon-16.png"/>
        <bt:Image id="Icon.32" DefaultValue="https://legal-platform-gateway.onrender.com/word-addin/assets/icon-32.png"/>
        <bt:Image id="Icon.80" DefaultValue="https://legal-platform-gateway.onrender.com/word-addin/assets/icon-80.png"/>
      </bt:Images>

      <bt:Urls>
        <bt:Url id="Taskpane.Url" DefaultValue="https://legal-platform-gateway.onrender.com/word-addin/taskpane.html"/>
        <bt:Url id="Commands.Url" DefaultValue="https://legal-platform-gateway.onrender.com/word-addin/commands.html"/>
      </bt:Urls>

      <bt:ShortStrings>
        <bt:String id="TabLabel" DefaultValue="Bojin AI"/>
        <bt:String id="GroupLabel" DefaultValue="Bojin AI"/>
        <bt:String id="OpenButton.Label" DefaultValue="Bojin AI"/>
      </bt:ShortStrings>

      <bt:LongStrings>
        <bt:String id="OpenButton.Tooltip" DefaultValue="Open AI assistant for drafting, suggestions, explanations, and improvements"/>
      </bt:LongStrings>
    </Resources>

    <!-- Office SSO Configuration -->
    <WebApplicationInfo>
      <Id>0ac0c3a6-6482-4ff4-81a6-c2f96c506cfd</Id>
      <Resource>api://legal-platform-gateway.onrender.com/0ac0c3a6-6482-4ff4-81a6-c2f96c506cfd</Resource>
      <Scopes>
        <Scope>User.Read</Scope>
        <Scope>profile</Scope>
        <Scope>openid</Scope>
      </Scopes>
    </WebApplicationInfo>

  </VersionOverrides>
</OfficeApp>
