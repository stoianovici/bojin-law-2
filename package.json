{
  "name": "legal-platform",
  "version": "0.1.0",
  "private": true,
  "description": "AI-powered legal case management platform with Microsoft 365 integration",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --collectCoverageFrom='packages/**/src/**/*.{ts,tsx}' --collectCoverageFrom='apps/**/src/**/*.{ts,tsx}' --collectCoverageFrom='services/**/src/**/*.{ts,tsx}'",
    "test:ci": "jest --ci --coverage --maxWorkers=2 --collectCoverageFrom='packages/**/src/**/*.{ts,tsx}' --collectCoverageFrom='apps/**/src/**/*.{ts,tsx}' --collectCoverageFrom='services/**/src/**/*.{ts,tsx}'",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:report": "playwright show-report",
    "test:perf": "lhci autorun",
    "test:perf:collect": "lhci collect",
    "test:perf:assert": "lhci assert",
    "test:perf:upload": "lhci upload",
    "test:a11y": "playwright test tests/e2e/accessibility",
    "test:a11y:ui": "playwright test tests/e2e/accessibility --ui",
    "clean": "turbo run clean",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "prepare": "husky"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/js": "^9.39.1",
    "@lhci/cli": "^0.15.1",
    "@playwright/test": "^1.56.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "axe-playwright": "^2.2.2",
    "dotenv": "^17.2.3",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-axe": "^10.0.0",
    "lint-staged": "^16.2.6",
    "pg": "^8.16.3",
    "prettier": "^3.4.2",
    "tsx": "^4.20.6",
    "turbo": "^2.3.3",
    "yaml": "^2.8.1"
  },
  "packageManager": "pnpm@10.18.1",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "services/*"
  ]
}
