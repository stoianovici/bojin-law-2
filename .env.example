# Legal Platform - Environment Variables Template
# Copy this file to .env and fill in the values

# ================================
# NODE ENVIRONMENT
# ================================
# Options: development, staging, production
NODE_ENV=development

# ================================
# DATABASE - PostgreSQL
# ================================
# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database
# Local development with Docker: postgresql://postgres:postgres@localhost:5432/legal_platform
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/legal_platform

# Database pool settings
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# ================================
# CACHE - Redis
# ================================
# Redis connection string
# Format: redis://host:port
# Local development with Docker: redis://localhost:6379
REDIS_URL=redis://localhost:6379

# Redis session configuration
REDIS_SESSION_PREFIX=legal_platform:session:
REDIS_SESSION_TTL=86400

# ================================
# AZURE AD AUTHENTICATION
# ================================
# Azure Active Directory configuration for Microsoft 365 integration
# Get these from Azure Portal: https://portal.azure.com

# Azure AD Application (Client) ID
AZURE_AD_CLIENT_ID=your-client-id-here

# Azure AD Tenant (Directory) ID
AZURE_AD_TENANT_ID=your-tenant-id-here

# Azure AD Client Secret (keep this secure!)
AZURE_AD_CLIENT_SECRET=your-client-secret-here

# Azure AD Redirect URI (must match Azure AD app configuration)
AZURE_AD_REDIRECT_URI=http://localhost:3000/api/auth/callback

# ================================
# API CONFIGURATION
# ================================
# Base URL for the frontend application
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Base URL for the API (GraphQL endpoint)
NEXT_PUBLIC_API_URL=http://localhost:3000/api/graphql

# API Rate limiting
API_RATE_LIMIT_WINDOW_MS=60000
API_RATE_LIMIT_MAX_REQUESTS=100

# ================================
# ANTHROPIC CLAUDE AI
# ================================
# Claude API key for AI-powered features
# Get your API key from: https://console.anthropic.com/
CLAUDE_API_KEY=your-claude-api-key-here

# Claude model to use
CLAUDE_MODEL=claude-sonnet-4-5-20250929

# Claude API endpoint
CLAUDE_API_URL=https://api.anthropic.com/v1

# Maximum tokens for AI responses
CLAUDE_MAX_TOKENS=4096

# ================================
# AZURE BLOB STORAGE
# ================================
# Azure Storage account for document storage
AZURE_STORAGE_ACCOUNT_NAME=your-storage-account-name
AZURE_STORAGE_ACCOUNT_KEY=your-storage-account-key
AZURE_STORAGE_CONTAINER_NAME=legal-documents

# ================================
# SESSION & SECURITY
# ================================
# Session secret for signing cookies (generate a random string)
# Generate with: openssl rand -base64 32
SESSION_SECRET=your-session-secret-here

# JWT secret for token signing (generate a random string)
# Generate with: openssl rand -base64 32
JWT_SECRET=your-jwt-secret-here

# JWT token expiration (in seconds)
JWT_EXPIRATION=3600

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:6006

# ================================
# MICROSOFT 365 INTEGRATION
# ================================
# Microsoft Graph API configuration
# Uses same Azure AD credentials as above

# Graph API endpoint
MS_GRAPH_API_URL=https://graph.microsoft.com/v1.0

# Graph API scopes (space-separated)
MS_GRAPH_SCOPES=User.Read Calendars.ReadWrite Mail.ReadWrite Files.ReadWrite.All

# ================================
# LOGGING & MONITORING
# ================================
# Log level: error, warn, info, debug
LOG_LEVEL=debug

# Azure Application Insights connection string (optional)
APPLICATIONINSIGHTS_CONNECTION_STRING=

# ================================
# FEATURE FLAGS
# ================================
# Enable/disable features in development
FEATURE_AI_DOCUMENT_DRAFTING=true
FEATURE_SEMANTIC_SEARCH=true
FEATURE_MS365_INTEGRATION=true
FEATURE_REAL_TIME_COLLABORATION=false

# ================================
# EMAIL CONFIGURATION (Future)
# ================================
# SMTP configuration for transactional emails
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your-smtp-user
# SMTP_PASSWORD=your-smtp-password
# SMTP_FROM=noreply@legal-platform.com

# ================================
# DEVELOPMENT TOOLS
# ================================
# Enable debug mode
DEBUG=false

# Enable source maps in production
ENABLE_SOURCE_MAPS=false

# Storybook port
STORYBOOK_PORT=6006
