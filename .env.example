# Legal Platform - Environment Variables
# Copy this file to .env and fill in the values for local development

# ===== Database Configuration =====
# PostgreSQL connection string with pgvector extension
# Format: postgresql://username:password@host:port/database?sslmode=require
DATABASE_URL=postgresql://postgres:password@localhost:5432/legal_platform_dev

# ===== Cache Configuration =====
# Redis connection string for session management and caching
# Format: redis://username:password@host:port
REDIS_URL=redis://localhost:6379

# ===== Azure Storage Configuration =====
# Azure Blob Storage connection string for document storage
# Get from Azure Portal > Storage Account > Access Keys
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=youraccountname;AccountKey=youraccountkey;EndpointSuffix=core.windows.net
AZURE_STORAGE_CONTAINER_NAME=documents

# ===== Azure AD Authentication =====
# Azure AD OAuth 2.0 credentials for enterprise SSO
# Get from Azure Portal > App Registrations > Your App
AZURE_AD_CLIENT_ID=your-client-id-here
AZURE_AD_CLIENT_SECRET=your-client-secret-here
AZURE_AD_TENANT_ID=your-tenant-id-here
AZURE_AD_REDIRECT_URI=http://localhost:3000/api/auth/callback

# ===== Monitoring & Logging =====
# Application Insights instrumentation key
# Get from Azure Portal > Application Insights > Properties
APPLICATION_INSIGHTS_CONNECTION_STRING=InstrumentationKey=your-key-here;IngestionEndpoint=https://westeurope-5.in.applicationinsights.azure.com/
APPLICATION_INSIGHTS_KEY=your-instrumentation-key-here

# ===== API Configuration =====
# GraphQL API Gateway endpoint
# For local development, use localhost. For production, use your AKS ingress URL
NEXT_PUBLIC_API_URL=http://localhost:4000/graphql
API_PORT=4000

# ===== Application Configuration =====
# Next.js app configuration
NODE_ENV=development
PORT=3000

# JWT Secret for session tokens (generate a random string)
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# ===== Development Only =====
# Enable debug logging in development
DEBUG=true
LOG_LEVEL=debug

# ===== Optional: AI Service Configuration =====
# OpenAI API key for AI-powered features
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4

# ===== Optional: Email Notification Service =====
# SMTP configuration for email notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-email-password
SMTP_FROM=noreply@legal-platform.com

# ===== SharePoint Configuration (OPS-107) =====
# SharePoint site for firm document storage
# Site ID - format: hostname,site-guid,web-guid
# Get from: GET https://graph.microsoft.com/v1.0/sites/{hostname}:/sites/{site-path}
SHAREPOINT_SITE_ID=yourtenant.sharepoint.com,site-guid,web-guid
# Drive ID (document library) - get from: GET https://graph.microsoft.com/v1.0/sites/{siteId}/drive
SHAREPOINT_DRIVE_ID=b!xxxxxxxxxxxxx
