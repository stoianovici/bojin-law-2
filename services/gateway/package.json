    "@types/jsonwebtoken": "^9.0.0",
    "@types/node": "^24.10.1",
    "@types/supertest": "^6.0.0",
    "@types/uuid": "^11.0.0",
    "jest": "^30.2.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.0",
    "tsx": "^4.20.6",
    "typescript": "^5.3.0"
