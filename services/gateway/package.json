{
  "name": "@legal-platform/gateway",
  "version": "1.0.0",
  "description": "API Gateway for Legal Platform with Azure AD authentication",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "NODE_ENV=development tsx watch --env-file=.env src/index.ts",
    "dev:seed": "NODE_ENV=development tsx watch --env-file=.env.seed src/index.ts",
    "dev:real": "NODE_ENV=development tsx watch --env-file=.env.real src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src __tests__",
    "type-check": "tsc --noEmit",
    "docs:generate": "node scripts/generate-docs.js"
  },
  "keywords": [
    "api",
    "gateway",
    "authentication",
    "azure-ad",
    "oauth",
    "legal"
  ],
  "author": "Legal Platform Team",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@apollo/server": "^4.12.2",
    "@aws-sdk/client-s3": "^3.700.0",
    "@aws-sdk/s3-request-presigner": "^3.940.0",
    "@azure/msal-node": "^2.0.0",
    "@graphql-tools/load-files": "^7.0.1",
    "@graphql-tools/schema": "^10.0.29",
    "@graphql-tools/utils": "^10.10.3",
    "@legal-platform/database": "workspace:*",
    "@legal-platform/types": "workspace:*",
    "@microsoft/microsoft-graph-client": "^3.0.7",
    "@prisma/client": "^5.22.0",
    "axios": "^1.13.2",
    "bullmq": "^5.65.0",
    "connect-redis": "^7.0.0",
    "cors": "^2.8.5",
    "dataloader": "^2.2.3",
    "date-fns": "^4.1.0",
    "docx": "^9.5.1",
    "express": "^4.19.0",
    "express-rate-limit": "^7.5.1",
    "express-session": "^1.17.0",
    "graphql": "^16.12.0",
    "graphql-scalars": "^1.25.0",
    "graphql-subscriptions": "^3.0.0",
    "graphql-ws": "^6.0.6",
    "helmet": "^8.1.0",
    "ioredis": "^5.8.2",
    "isomorphic-fetch": "^3.0.0",
    "jsonwebtoken": "^9.0.3",
    "jszip": "^3.10.1",
    "node-cron": "^4.2.1",
    "pdf-parse": "^2.4.5",
    "ws": "^8.18.3",
    "xml2js": "^0.6.2",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@microsoft/microsoft-graph-types": "^2.43.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.18.0",
    "@types/isomorphic-fetch": "^0.0.39",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/node": "^24.10.1",
    "@types/node-cron": "^3.0.11",
    "@types/pdf-parse": "^1.1.5",
    "@types/supertest": "^6.0.0",
    "@types/ws": "^8.18.1",
    "@types/xml2js": "^0.4.14",
    "jest": "^30.2.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.0",
    "tsx": "^4.20.6",
    "typescript": "^5.3.0"
  }
