    "@prisma/client": "^5.22.0",
    "@types/express-rate-limit": "^6.0.2",
    "axios": "^1.13.2",
    "connect-redis": "^7.0.0",
    "cors": "^2.8.5",
    "express": "^4.19.0",
    "express-rate-limit": "^7.5.1",
    "express-session": "^1.17.0",
    "graphql": "^16.12.0",
    "graphql-scalars": "^1.25.0",
