{
  "name": "@legal-platform/test-utils",
  "version": "0.1.0",
  "private": true,
  "description": "Shared testing utilities for Legal Platform",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "test": "jest"
  },
  "dependencies": {
    "@faker-js/faker": "^9.3.0",
    "@legal-platform/types": "workspace:*",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1"
  },
  "devDependencies": {
    "@swc/jest": "^0.2.39",
    "@testing-library/jest-dom": "^6.9.1",
    "@types/jest": "^30.0.0",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "axe-core": "^4.11.0",
    "jest": "^30.2.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2"
  },
  "peerDependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
