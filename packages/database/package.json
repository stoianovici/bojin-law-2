{
  "name": "@legal-platform/database",
  "version": "1.0.0",
  "description": "Database schemas, migrations, and Prisma client for Legal Platform",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "prisma generate --schema=./prisma/schema.prisma && tsc",
    "dev": "tsc --watch",
    "postinstall": "prisma generate --schema=./prisma/schema.prisma",
    "prisma:generate": "prisma generate --schema=./prisma/schema.prisma",
    "prisma:migrate": "prisma migrate dev --schema=./prisma/schema.prisma",
    "prisma:migrate:deploy": "prisma migrate deploy --schema=./prisma/schema.prisma",
    "prisma:studio": "prisma studio --schema=./prisma/schema.prisma",
    "db:push": "prisma db push --schema=./prisma/schema.prisma",
    "db:seed": "ts-node scripts/seed.ts",
    "migration:run": "./scripts/run-migration.sh",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "database",
    "prisma",
    "postgresql",
    "pgvector",
    "legal-platform"
  ],
  "author": "Legal Platform Team",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.8.0",
    "ioredis": "^5.3.2"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/ioredis": "^5.0.0",
    "prisma": "^5.8.0",
    "typescript": "^5.3.3"
  },
  "prisma": {
    "schema": "./prisma/schema.prisma"
  }
}
